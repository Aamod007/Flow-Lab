# =============================================================================
# ENVIRONMENT VARIABLES TEMPLATE
# =============================================================================
# Copy this file to .env.local for development
# Never commit .env files to version control
# =============================================================================

# -----------------------------------------------------------------------------
# REQUIRED VARIABLES (Application will not start without these)
# -----------------------------------------------------------------------------

# Clerk Authentication
# Get these from: https://dashboard.clerk.com
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_xxxxx
CLERK_SECRET_KEY=sk_test_xxxxx

# Database Connection
# PostgreSQL connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL=postgresql://user:password@localhost:5432/flowlab

# Direct Database URL (required for Prisma Accelerate users)
# If using Prisma Accelerate, set DATABASE_URL to your Accelerate URL
# and DIRECT_DATABASE_URL to your direct PostgreSQL connection
# Example: DIRECT_DATABASE_URL=postgresql://user:password@host:port/database
DIRECT_DATABASE_URL=postgresql://user:password@localhost:5432/flowlab

# Stripe Payments
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET=sk_test_xxxxx

# Application URLs
# Update these for production deployment
NEXT_PUBLIC_URL=http://localhost:3000
NEXT_PUBLIC_DOMAIN=localhost:3000
NEXT_PUBLIC_SCHEME=http

# Gemini Integration
# Get from: https://console.cloud.google.com/apis/credentials
GEMINI_API_KEY=xxxxx

# OpenAI Integration (for embeddings and AI features)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-xxxxx

# Ollama (Local AI Models)
# Optional: For running local AI models
OLLAMA_BASE_URL=http://localhost:11434

# Embedding Provider (openai, gemini, or ollama)
EMBEDDING_PROVIDER=openai

# -----------------------------------------------------------------------------
# OPTIONAL VARIABLES (For specific integrations)
# -----------------------------------------------------------------------------

# Google OAuth & Drive Integration
# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=xxxxx.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=xxxxx
OAUTH2_REDIRECT_URI=http://localhost:3000/api/auth/callback/google

# Discord Integration
# Get from: https://discord.com/developers/applications
DISCORD_CLIENT_ID=xxxxx
DISCORD_CLIENT_SECRET=xxxxx
DISCORD_REDIRECT_URI=http://localhost:3000/api/auth/callback/discord

# Notion Integration
# Get from: https://www.notion.so/my-integrations
NOTION_API_SECRET=secret_xxxxx
NOTION_CLIENT_ID=xxxxx
NOTION_REDIRECT_URI=http://localhost:3000/api/auth/callback/notion

# Slack Integration
# Get from: https://api.slack.com/apps
SLACK_CLIENT_ID=xxxxx
SLACK_CLIENT_SECRET=xxxxx
SLACK_SIGNING_SECRET=xxxxx
SLACK_REDIRECT_URI=http://localhost:3000/api/auth/callback/slack
# Build the redirect URL using your Slack Client ID above
NEXT_PUBLIC_SLACK_REDIRECT=https://slack.com/oauth/v2/authorize?client_id=YOUR_SLACK_CLIENT_ID&scope=chat:write,channels:read,groups:read,mpim:read,im:read&user_scope=chat:write,channels:read,groups:read,mpim:read,im:read&redirect_uri=http%3A%2F%2Flocalhost%3A3000%2Fapi%2Fauth%2Fcallback%2Fslack

# Discord OAuth Redirect URL (build using your Discord Client ID)
NEXT_PUBLIC_DISCORD_REDIRECT=https://discord.com/oauth2/authorize?client_id=YOUR_DISCORD_CLIENT_ID&response_type=code&redirect_uri=http%3A%2F%2Flocalhost%3A3000%2Fapi%2Fauth%2Fcallback%2Fdiscord&scope=identify+guilds+webhook.incoming

# Notion OAuth URL (build using your Notion Client ID)
NEXT_PUBLIC_NOTION_AUTH_URL=https://api.notion.com/v1/oauth/authorize?client_id=YOUR_NOTION_CLIENT_ID&response_type=code&owner=user&redirect_uri=http%3A%2F%2Flocalhost%3A3000%2Fapi%2Fauth%2Fcallback%2Fnotion

# -----------------------------------------------------------------------------
# DEVELOPMENT ONLY
# -----------------------------------------------------------------------------

# Node Environment
NODE_ENV=development

# Enable debug logging
DEBUG=false

# -----------------------------------------------------------------------------
# PRODUCTION NOTES
# -----------------------------------------------------------------------------
# For production deployment on Vercel:
# 1. Set all REQUIRED variables in Vercel dashboard
# 2. Update URLs to use your production domain (https://your-domain.com)
# 3. Use production API keys (pk_live_, sk_live_, etc.)
# 4. Never use test/development keys in production
# 5. Enable all optional integrations you plan to use
# -----------------------------------------------------------------------------
